<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/selector_second_category"
    android:baselineAligned="true"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center" >

        <FrameLayout
            android:id="@+id/categorySecondIconFrameLayout"
            android:layout_width="48dip"
            android:layout_height="48dip">

            <ImageView
                android:id="@+id/imgSecondCategoryIcon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:src="@drawable/default_96_96" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvSecondCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/line"
            android:drawablePadding="2dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSecondCategoryDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="TextView . TextView . "
            android:textColor="#8e8282"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical|left"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgSencondToDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_arrow_right" />
    </LinearLayout>

</LinearLayout>